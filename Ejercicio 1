CREATE TABLE JCABALLERO(
    CUSTOMER_ID INT AUTO_INCREMENT PRIMARY KEY,
    NAME VARCHAR(255) NOT NULL,
    ADDRESS VARCHAR(255) NOT NULL,
    WEBSITE VARCHAR(255) NOT NULL,
    CREDIT_LIMIT numeric
);


